<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar_color"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/identification_evaluation_statistics"
                android:textColor="@color/colorGrayDarker"
                android:textSize="@dimen/large_ts" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_dangyue_num"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                    android:elevation="@dimen/elevation_basic"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/current_assessment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                    <TextView
                        android:id="@+id/tv_dangyue_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_ts" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_niandu_num"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                    android:elevation="@dimen/elevation_basic"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/annual_assessment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                    <TextView
                        android:id="@+id/tv_niandu_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_ts" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_zhuanxiang_num"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                    android:elevation="@dimen/elevation_basic"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/special_assessment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                    <TextView
                        android:id="@+id/tv_zhuanxiang_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_ts" />

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_risk_statistics"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                android:elevation="@dimen/elevation_basic"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/risk_statistics"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_ts" />

                <TextView
                    android:id="@+id/tv_risk_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0条"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_ts" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_risk_analysis"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                android:elevation="@dimen/elevation_basic"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/risk_analysis"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_ts" />

            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/monthly_hidden_risk"
                android:textColor="@color/colorGrayDarker"
                android:textSize="@dimen/large_ts" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_openNum_num"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                    android:elevation="@dimen/elevation_basic"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/identific_open"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                    <TextView
                        android:id="@+id/tv_openNum_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_ts" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_closeNum_num"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                    android:elevation="@dimen/elevation_basic"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/identific_clone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                    <TextView
                        android:id="@+id/tv_closeNum_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_ts" />

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_onNum_num"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                    android:elevation="@dimen/elevation_basic"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/identific_on"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                    <TextView
                        android:id="@+id/tv_onNum_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_ts" />

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_rectangle_rounded_blue"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/monthly_hidden_statistics"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_delete_num"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="记录"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_delete_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_unchange_num"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="#079fd7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="6dp">


                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="未整改"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_unchange_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_within_the_time_limit_num"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#03a9d3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="6dp">


                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="逾期"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_within_the_time_limit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_for_acceptance_num"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="#02b5d0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="6dp">


                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="未验收"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_for_acceptance_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/hidden_danger_statistics_of_each_unit"
                android:textColor="@color/colorGrayDarker"
                android:textSize="@dimen/large_ts" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                android:elevation="@dimen/elevation_basic"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:itemCount="1"
                tools:listitem="@layout/item_hidden_danger_statistics_of_each_unit" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v4.widget.NestedScrollView>