                                android:layout_marginRight="-30dp"
                                android:adjustViewBounds="true"
                                android:src="@mipmap/ic_recheck"
                                android:visibility="gone" />


                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.LinearLayoutCompat>


                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="隐患归属"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />

                            <TextView
                                android:id="@+id/tv_hidden_belong"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />


                        </android.support.v7.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.67dp"
                            android:background="@color/white" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="是否挂牌督办"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />

                            <TextView
                                android:id="@+id/tv_is_hang"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />


                        </android.support.v7.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.67dp"
                            android:background="@color/white" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="发现隐患时间"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />

                            <TextView
                                android:id="@+id/tv_discovery_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />


                        </android.support.v7.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.67dp"
                            android:background="@color/white" />


                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="挂牌"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_ts" />


                                <TextView
                                    android:id="@+id/tv_oversee"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:ellipsize="marquee"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_ts" />


                            </android.support.v7.widget.LinearLayoutCompat>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.67dp"
                                android:background="@color/white" />


                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="隐患处理否"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_ts" />


                                <TextView
                                    android:id="@+id/tv_is_handle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:ellipsize="marquee"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_ts" />


                            </android.support.v7.widget.LinearLayoutCompat>


                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.LinearLayoutCompat>


                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.CardView>


        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:background="@drawable/layerlist_bottom_bg"
        android:layout_height="56dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="120dp"
            android:gravity="center"
            android:textSize="@dimen/middle_ts"
            android:text="@string/check_space"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_solid_blue_stroke_gray"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>