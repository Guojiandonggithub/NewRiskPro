<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@color/white">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="331dp"
            android:background="@mipmap/ic_login_new_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="158dp"
                android:text="煤矿隐患"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="排 查 治 理 系 统"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </android.support.v7.widget.LinearLayoutCompat>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginTop="24dp"
            android:paddingRight="25dp"
            android:background="@drawable/shape_rectangle_rounded"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/internet_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#39A3DD"
                android:textSize="16sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="11dp"
                    android:paddingRight="8dp"
                    android:src="@mipmap/user_name" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="用户名"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/date_picker_text_dark"
                    android:text=""
                    android:background="@color/tranparent"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />


            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f0f0f0"/>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="11dp"
                    android:paddingRight="8dp"
                    android:src="@mipmap/user_pw" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text=""
                    android:background="@color/tranparent"
                    android:textColorHint="#999999"
                    android:textColor="@color/date_picker_text_dark"
                    android:textSize="16sp" />


            </android.support.v7.widget.LinearLayoutCompat>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/radio_net"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/outer_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/login_btn_radio"
                        android:drawablePadding="10dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:text="外网"
                        android:textSize="25dp" />

                    <RadioButton
                        android:id="@+id/intra_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="-43dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/login_btn_radio"
                        android:drawablePadding="10dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:text="内网"
                        android:textSize="25dp" />
                </RadioGroup>

            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/shape_rectangle_rounded_blue"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>